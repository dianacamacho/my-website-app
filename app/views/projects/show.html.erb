<div id="content">
  <div class="e-block e-block-skin">
    <div class="container">
      <h2 class="font-accident-one-bold uppercase">
        <%= @project.name %>
      </h2>
      <div class="dividewhite2"></div>

      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-8">
              <img src="/assets/custom/images/magazine/01.jpg" class="img-responsive" alt="img11"/>
            </div>
            <div class="col-md-4">
              <div class="row">
                <div class="col-md-11 col-md-offset-1">
                  <div class="portfolio-item-data">
                    <h5 class="font-accident-one-medium uppercase">Project Info</h5>
                    <div class="infoblock">
                      <hr>
                      <ul>
                        <li>Type: <span><%= @project.project_type %></span></li>
                        <% if @project.client.present? %>
                          <li>Client: <span><%= @project.client %></span></li>
                        <% end %>
                        <% if @project.website.present? %>
                          <li><%= link_to "Website", @project.website %></li>
                        <% end %>
                        <% if @project.github.present? %>
                          <li><%= link_to "GitHub", @project.github %></li>
                        <% end %>
                        <% if @project.screencast.present? %>
                          <li><%= link_to "Screencast", @project.screencast %></li>
                        <% end %>
                        <% if @project.website.present? %>
                          <li><%= link_to "Preview", @project.preview %></li>
                        <% end %>
                      </ul>
                    </div>
                    <h5 class="font-accident-one-medium uppercase">Technologies</h5>
                    <div class="infoblock">
                      <hr>
                      <ul class="list-o">
                        <% @project.technologies.each do |tech| %>
                          <li><%= tech.name %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="dividewhite2"></div>

      <div class="row">
        <div class="col-md-12">
          <h3 class="font-accident-one-medium uppercase">Overview</h3>
