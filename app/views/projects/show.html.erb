<div class="content-wrap" id="project-show">
  <div id="blogpost" class="inner-content">
    <section id="page-title" class="inner-section project-title-info">
      <div class="container-fluid nopadding wow fadeInRight" data-wow-delay="0.4s" data-wow-offset="10">
        <h2 class="font-accident-two-normal uppercase"><%= @project.name %></h2><br>
        <% if user_signed_in? %>
          <div>
            <%= link_to "Edit", edit_project_path(@project), class: "btn btn-lg btn-darker" %>
            <%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this project?" }, class: "btn btn-lg btn-darker" %>
          </div>
        <% end %><br>
        <div class="post-tag pull-left">
          <span>Technologies:</span>
          <% @project.technologies.each do |tech| %>
            <span><a><%= tech.name %></a></span>
          <% end %>
        </div>
      </div>

      <div class="project-links">
        <ul class="list-inline social">
          <% unless @project.preview == "" || @project.preview == nil %>
            <a target="_blank" href="<%= @project.preview %>" data-toggle="tooltip" data-placement="bottom" title="More Info">
              <div class="link-wrapper text-center">
                <li><i class="fa fa-eye link-icon"></i></li>
              </div>
            </a>
          <% end %>
          <% unless @project.github == "" || @project.github == nil %>
            <a target="_blank" href="<%= @project.github %>" data-toggle="tooltip" data-placement="bottom" title="Code on GitHub">
              <div class="link-wrapper text-center">
                <li><i class="fa fa-github-square link-icon"></i></li>
              </div>
            </a>
          <% end %>
          <% unless @project.website == "" || @project.website == nil %>
            <a target="_blank" href="<%= @project.website %>" data-toggle="tooltip" data-placement="bottom" title="App Website">
              <div class="link-wrapper text-center">
                <li><i class="fa fa-laptop link-icon"></i></li>
              </div>
            </a>
          <% end %>
          <% unless @project.screencast == "" || @project.screencast == nil %>
            <a target="_blank" href="<%= @project.screencast %>" data-toggle="tooltip" data-placement="bottom" title="App Screencast">
              <div class="link-wrapper text-center">
                <li><i class="fa fa-video-camera link-icon"></i></li>
              </div>
            </a>
          <% end %>
         </ul>
       </div>
    </section>
    <!-- Blog Block -->
    <section class="inner-section project-post">
      <div class="container-fluid nopadding">
        <article class="post wow fadeInDown" data-wow-delay="0.6s" data-wow-offset="10">
          <hr>
          <span class="screencap-heading">Description</span>
           <!-- Post Content -->
          <p class="project-description"><%= @project.description %></p>
           <!-- /Post Content -->
          <div class="dividewhite4"></div>
          <hr>
          <span class="screencap-heading">Screencaps</span>
          <div class="dividewhite4"></div>
          <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
              <% (@project.images.size - 1).times do %>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
              <% end %>  
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
              <div class="item active">
                <%= image_tag "portfolio_pics/#{@project.image_1}", class: "img-responsive wow fadeInDown" %>
              </div>
              <% @project.images.each_with_index do |image, index| %>
                <% if index > 0 %>
                  <div class="item">
                    <%= image_tag "portfolio_pics/#{image}", class: "img-responsive wow fadeInDown indiv-images" %>
                  </div>
                <% end %>
              <% end %>
            </div>
            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          <hr>
        </article>
      </div>
      <div class="dividewhite8"></div>
    </section>
    <!-- /Blog Block -->
  </div>
</div>
