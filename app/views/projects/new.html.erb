<% provide(:title, "New Project") %>

<div class="content-wrap" id="login">
  <div id="feedback" class="inner-content">
    <section id="page-title" class="inner-section">
      <div class="container-fluid nopadding wow fadeInRight" data-wow-delay="0.4s" data-wow-offset="10">
        <h2 class="font-accident-two-normal uppercase">New Project</h2>
        <h5 class="font-accident-one-bold uppercase subtitle">Enter project info!</h5>
      </div>
    </section>
    <!-- Feedback Block -->
    <section class="inner-section feedback feedback-light">
      <div class="container-fluid nopadding">
        <div class="row">
          <div class="col-md-2">&nbsp;</div>
          <div class="col-md-8 e-centered wow fadeInDown" data-wow-delay="0.6s" data-wow-offset="10">
            <div class="dividewhite2"></div>
            <div id="form-messages"></div>
            <%= form_for(@project, url: projects_path, html: {:class => "wpcf7-form" }) do |f| %>
              <%= f.hidden_field :user_id, value: current_user.id %>
              <div class="field">
                <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
              </div>
              <div class="field">
                <%= f.text_area :description, autofocus: true, size: "10x5", placeholder: "Describe the project!" %>
              </div>
              <div class="row">
                <div class="field col-md-6">
                  <%= f.text_field :github, autofocus: true, placeholder: "GitHub repo url" %>
                </div>
                <div class="field col-md-6">
                  <%= f.text_field :website, autofocus: true, placeholder: "Live website url" %>
                </div>
              </div>
              <div class="row">
                <div class="field col-md-6">
                  <%= f.text_field :screencast, autofocus: true, placeholder: "Youtube screencast url" %>
                </div>
                <div class="field col-md-6">
                  <%= f.text_field :preview, autofocus: true, placeholder: "Preview page url" %>
                </div>
              </div>
              <div class="row">
                <div class="field col-md-6">
                  <%= f.text_field :image_1, autofocus: true, placeholder: "Image 1" %>
                </div>
                <div class="field col-md-6">
                  <%= f.text_field :image_2, autofocus: true, placeholder: "Image 2" %>
                </div>
              </div>
              <div class="row">
                <div class="field col-md-6">
                  <%= f.text_field :image_3, autofocus: true, placeholder: "Image 3" %>
                </div>
                <div class="field col-md-6">
                  <%= f.text_field :image_4, autofocus: true, placeholder: "Image 4" %>
                </div>
              </div><br>
              <div class="field">
                <div class="row">
                  <div class="col-md-12">
                    <%= f.label "Check all relevant technologies" %><br /><br />
                    <%= f.collection_check_boxes :technology_ids, Technology.all.order(:name), :id, :name do |b| %>
                      <div class="col-md-3 col-sm-4 col-xs-6 collection-check-box">
                        <%= b.check_box %>
                        <%= b.label %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div><br>
              <div class="field text-center">
                <%= button_tag "Create Project", class: "btn btn-lg btn-darker" %>
                <%= link_to "Cancel", projects_path, class: "btn btn-lg btn-darker" %>
              </div>
            <% end %>
          </div>
          <div class="col-md-2">&nbsp;</div>
          <div class="col-md-12 divider-dynamic"></div>
        </div>
      </div>
      <div class="dividewhite6"></div>
    </section>
    <!-- /Feedback Block -->
  </div>
</div>

