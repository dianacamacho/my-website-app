<% provide(:title, @page_title_detils) %>

<div id="content">
  <div class="row">
    <div class="col-md-12">
      <div class="e-block e-block-light e-bg-light-texture" data-stellar-background-ratio="0.5">
        <div class="row">
          <div class="width-60 e-block-centered">
            <h3 class="uppercase">Reset Password</h3>
            <div class="dividewhite2"></div>
            <div class="contacts-form">
              <div>
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "wpcf7-form"}) do |f| %>
                  <%= devise_error_messages! %>
                  <%= f.hidden_field :reset_password_token %>
                  <div class="field">
                    <!--<label for="name">Name:</label>-->
                    <%= f.password_field :password, autocomplete: "off", placeholder: "New password" %>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                    <% end %>
                  </div>
                  <div class="field">
                    <!--<label for="name">Name:</label>-->
                    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
                  </div>
                  <div class="dividewhite2"></div>
                  <div class="field text-center">
                    <%= button_tag "Change my password", class: "btn btn-lg btn-darker" %>
                  </div>
                <% end %>
                <div class="devise-links">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(function(){
    $('html, body').animate({
        scrollTop: $('#content').offset().top
    }, 2000);
    return false;
  });

  $(document).ready(function() {
    $(".page-title-content-text").html("Passwords");
  })
</script>


