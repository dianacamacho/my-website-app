

<div id="content">
  <div class="e-block e-block-skin e-block-centered pb-20">
    <div class="container">
      <!-- Decorative arrow -->
      <div class="down-arrow">&nbsp;</div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="e-block e-block-skin e-block-centered ptb-20">
        <div class="container">
          <div class="row">
            <div class="col-md-4 infoblock block-centered contact-address">
              <a href="#"><%= image_tag "section_pics/contacts_chicago.png", alt: "chicago" %></a>
              <div class="dividewhite2"></div>
              <!-- <h2 class="font-accident-one-light uppercase"><a href="#">Chicago</a></h2> -->
            </div>
            <div class="col-md-8 text-left">
              <p>
                My name is Diana Camacho and I am a web developer in Chicago, IL.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="e-block e-block-light e-bg-light-texture" data-stellar-background-ratio="0.5">
        <div class="row">
          <div class="width-60 e-block-centered">
            <h3 class="uppercase">Contact Me</h3>
            <div class="dividewhite2"></div>

            <div class="contacts-form">
              <div>
                <%= form_for(@email_message, html: {:class => "contact-form" }) do |f| %>
                  <%= f.hidden_field :nickname %>
                  <div class="field">
                    <!--<label for="name">Name:</label>-->
                    <%= f.text_field :name, required: true, placeholder: "Your Name" %>
                  </div>
                  <div class="field">
                    <!--<label for="name">Name:</label>-->
                    <%= f.email_field :email, required: true, placeholder: "Your Email" %>
                  </div>
                  <div class="field">
                    <!--<label for="name">Name:</label>-->
                    <%= f.text_area :message, as: :text, placeholder: "Your message!" %>
                  </div>
                  <div class="field text-center">
                    <%= button_tag "Send Message", class: "btn btn-default btn-gr" %>
                    <%= link_to "Cancel", "/", class: "btn btn-default btn-gr" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

