<div class="content-wrap" id="blog-show">
  <div id="blogpost" class="inner-content">
    <section id="page-title" class="inner-section blog-title-info">
      <div class="container-fluid nopadding wow fadeInRight" data-wow-delay="0.4s" data-wow-offset="10">
        <h2 class="font-accident-two-normal uppercase"><%= @blog_post.title %></h2>
        <div class="post-meta">
          <span>by <a href="#!"><%= @blog_post.author %></a>,</span> <span><%= @blog_post.friendly_created_at %></span>
        </div>
        <br>
        <% if user_signed_in? %>
          <div>
            <%= link_to "Edit", edit_blog_post_path(@blog_post), class: "btn btn-lg btn-darker" %>
            <%= link_to "Delete", blog_post_path(@blog_post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "btn btn-lg btn-darker" %>
          </div>
        <% end %>
      </div>
    </section>
    <!-- Blog Block -->
    <section class="inner-section blog-post">
      <div class="container-fluid nopadding">
        <article class="post wow fadeInDown" data-wow-delay="0.6s" data-wow-offset="10">
          <hr>
          <!-- Post Content -->
          <%= @blog_post.text.html_safe %>
          <!-- /Post Content -->
          <div class="dividewhite4"></div>
          <hr>
        </article>
      </div>
      <div class="dividewhite8"></div>
    </section>
    <!-- /Blog Block -->
  </div>
</div>